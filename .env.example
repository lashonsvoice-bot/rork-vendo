# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE (copy to .env and fill values)
# =============================================================================
# Never commit .env to version control
# For production: set NODE_ENV=production, use HTTPS API_BASE_URL, and generate long random secrets

# =============================================================================
# CORE
# =============================================================================
NODE_ENV=development
API_BASE_URL=http://localhost:3000
# Public base URL the app will call (must include protocol, no trailing slash)
EXPO_PUBLIC_RORK_API_BASE_URL=http://localhost:3000
DEBUG=false

# =============================================================================
# EMAIL (SendGrid) - REQUIRED
# =============================================================================
# https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxx
SENDGRID_FROM=noreply@yourdomain.com

# =============================================================================
# AUTH & SESSIONS
# =============================================================================
# Generate strong secrets (at least 32 chars)
JWT_SECRET=replace_with_long_random_secret
SESSION_SECRET=replace_with_long_random_secret

# =============================================================================
# COMPANY / BRANDING
# =============================================================================
COMPANY_NAME=RevoVend
COMPANY_ADDRESS="123 Business St, City, State 12345"
COMPANY_LOGO_URL=https://yourdomain.com/logo.png
SUPPORT_EMAIL=support@yourdomain.com
COMPLIANCE_FOOTER="This email was sent by RevoVend. If you no longer wish to receive these emails, please contact support@yourdomain.com"

# =============================================================================
# STRIPE (Payments) - OPTIONAL BUT RECOMMENDED
# =============================================================================
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxx
# Webhook secret from Stripe → Developers → Webhooks
# Your endpoint in this app is: {API_BASE_URL}/stripe-webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxx

# Subscription Price IDs (create products & prices in Stripe, then paste IDs)
STRIPE_STARTER_MONTHLY_PRICE_ID=price_xxx
STRIPE_STARTER_YEARLY_PRICE_ID=price_xxx
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_xxx
STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_xxx

# =============================================================================
# EXPO (Push, builds) - OPTIONAL
# =============================================================================
EXPO_ACCESS_TOKEN=your_expo_access_token

# =============================================================================
# TWILIO (SMS) - OPTIONAL
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+15555555555

# =============================================================================
# AWS (OPTIONAL)
# =============================================================================
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# =============================================================================
# GOOGLE / MAPS (OPTIONAL)
# =============================================================================
GOOGLE_MAPS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# =============================================================================
# OPENAI (OPTIONAL)
# =============================================================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# CLOUDINARY (OPTIONAL)
# =============================================================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# COUCHBASE (OPTIONAL DB)
# =============================================================================
COUCHBASE_CONNECTION_STRING=couchbase://localhost
COUCHBASE_USERNAME=Administrator
COUCHBASE_PASSWORD=password
COUCHBASE_BUCKET_NAME=revovend

# =============================================================================
# VERIFICATION (DEVELOPMENT ONLY)
# =============================================================================
# Default verification session ID for development/testing
# This is automatically disabled in production (NODE_ENV=production)
VERIFICATION_DEFAULT_SESSION_ID=vf_1RzsZ4IArdLpeJ15IFszunRH
# Enable/disable default verification session (only works in development)
ENABLE_DEFAULT_VERIFICATION_SESSION=true
